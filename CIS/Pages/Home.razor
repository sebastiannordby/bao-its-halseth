@page "/"
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<MudLayout>
    <MudButton Color=@(Color.Primary)  OnClick="ButtonClicked">Test</MudButton>

    @if (visible)
    {
        <MudButton>Hello world</MudButton>
    }
</MudLayout>


@code{
    private bool visible;


    private void ButtonClicked()
    {
        visible = !visible;
        StateHasChanged();
    }

}